<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net46</TargetFrameworks>
    <PackageVersion>1.0.2</PackageVersion>
    <BuildOutputTargetFolder>tools</BuildOutputTargetFolder>
    <AssemblyOriginatorKeyFile>PublicKey.snk</AssemblyOriginatorKeyFile>
    <SignAssembly>False</SignAssembly>
    <DelaySign>True</DelaySign>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="Targets\netstandard1.0\**\*">
      <Pack>true</Pack>
      <PackagePath>build\netstandard1.0\</PackagePath>
    </Content>
    <Content Include="Targets\Sdk\**\*">
      <Pack>true</Pack>
      <PackagePath>Sdk\</PackagePath>
    </Content>
  </ItemGroup>

  <Target Name="PackReferenceAssemblies" AfterTargets="Build">
    <ItemGroup>
      <None Include="$(OutputPath)\net46\Newtonsoft.Json.dll">
        <Pack>true</Pack>
        <PackagePath>tools\netstandard2.0\;tools\net46\</PackagePath>
      </None>
      <None Include="$(OutputPath)\net46\System.ValueTuple.dll">
        <Pack>true</Pack>
        <PackagePath>tools\netstandard2.0\;tools\net46\</PackagePath>
      </None>
    </ItemGroup>
  </Target>

  <ItemGroup>
    <PackageReference Include="Microsoft.Build.Framework" Version="15.1.1012" />
    <PackageReference Include="Microsoft.Build.Utilities.Core" Version="15.1.1012" />
    <PackageReference Include="System.Runtime" Version="4.3.0" />
    <PackageReference Include="System.ValueTuple" Version="4.3.0" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
    <PackageReference Include="Newtonsoft.Json" Version="[10.0.3]" />
    <PackageReference Include="System.Runtime.Loader" Version="4.3.0" />
    <PackageReference Include="Microsoft.Azure.WebJobs" Version="[3.0.0-beta2]" />
    <PackageReference Include="Microsoft.Azure.WebJobs.Extensions" Version="[3.0.0-beta2]" />
    <PackageReference Include="Microsoft.Azure.WebJobs.Extensions.Http" Version="[3.0.0-beta2]" />
    <PackageReference Include="System.Runtime.Loader" Version="4.3.0" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net46'">
    <PackageReference Include="Microsoft.Azure.WebJobs" Version="[2.1.0-beta1]" />
    <PackageReference Include="Microsoft.Azure.WebJobs.Extensions" Version="[2.1.0-beta1]" />
    <PackageReference Include="Microsoft.Azure.WebJobs.Extensions.Http" Version="[1.0.0-beta1]" />
  </ItemGroup>
</Project>
